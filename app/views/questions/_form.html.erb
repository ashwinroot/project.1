<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :id %>
    <%= f.association :quiz %>
    <%= f.input :question %>
    <%= f.input :option1 %>
    <%= f.input :option2 %>
    <%= f.input :option3 %>
    <%= f.input :correct %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
