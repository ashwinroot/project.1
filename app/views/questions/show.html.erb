<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => Question %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:id) %></dt>
      <dd><pre class="prettyprint"><%= @question.id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:question) %></dt>
      <dd><pre class="prettyprint"><%= @question.question %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:option1) %></dt>
      <dd><pre class="prettyprint"><%= @question.option1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:option2) %></dt>
      <dd><pre class="prettyprint"><%= @question.option2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:option3) %></dt>
      <dd><pre class="prettyprint"><%= @question.option3 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:correct) %></dt>
      <dd><pre class="prettyprint"><%= @question.correct %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

